<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_phone15"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff3333"
        android:id="@+id/accelerationX"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text = "X"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textColor="#ffff33"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/accelerationY"
        android:layout_below="@+id/accelerationX"
        android:text = "Y"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textColor="#ccffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/accelerationY"
        android:id="@+id/accelerationZ"
        android:text = "Z"/>
</RelativeLayout>